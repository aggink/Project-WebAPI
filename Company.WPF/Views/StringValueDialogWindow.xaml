<Window x:Class="Company.WPF.Views.StringValueDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Company.WPF.Views"
        mc:Ignorable="d"
        Height="245" Width="401"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <UniformGrid Rows="1" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="5"
                     Button.Click="OnButtonClick">
            <Button Content="Ok" IsDefault="True" Margin="5,0" Padding="30,5" FontWeight="Bold"/>
        </UniformGrid>
        <TextBlock Text="Сообщение" Name="HeaderTextBlock" DockPanel.Dock="Top" Margin="5,10"/>
        <TextBox Name="MessageTextBox"/>
    </DockPanel>
</Window>